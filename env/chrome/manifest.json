{
  "name": "5chutil",
  "version": "0.1.1.19",
  "manifest_version": 3,
  "description": "5ch のスレッドページに NG や外部コンテンツ埋め込み等の便利な機能を追加する拡張機能",
  "icons": {
    "16": "icon/icon_16.png",
    "48": "icon/icon_48.png",
    "128": "icon/icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [ "*://*.5ch.net/test/read.cgi/*", "*://*.5ch.net/*/subback.html", "*://*.5ch.net/*/", "*://*.5ch.net/*/?*"],
      "js": [
        "js/jquery-3.6.0.min.js",
        "env.js",
        "js/5chutil_common.js",
        "js/5chutil.js"
      ],
      "css": [ "css/5chutil.css" ],
      "run_at": "document_start"
    }
  ],
  "permissions": [ "storage" ],
  "options_page": "html/options.html",
  "action":{
    "default_icon": "icon/icon_16.png",
    "default_title":"5chutil設定",
    "default_popup":"html/options.html"
  },
  "web_accessible_resources": [
    {
      "resources": [ "js/5chutil_inject.js" ],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  }
}
